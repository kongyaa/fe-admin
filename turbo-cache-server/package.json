{
  "name": "turbo-cache-server",
  "version": "1.0.0",
  "description": "Custom Turborepo Remote Cache Server with S3 Storage",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
